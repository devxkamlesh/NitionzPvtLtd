{
  "name": "nitionz-investment-platform",
  "version": "1.0.0",
  "description": "Professional investment platform for fixed deposits with high returns",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "analyze": "cross-env ANALYZE=true next build",
    "docker:build": "docker build -t nitionz-platform .",
    "docker:run": "docker run -p 3000:3000 nitionz-platform",
    "docker:compose": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "deploy:staging": "npm run build && npm run docker:build",
    "deploy:production": "npm run lint && npm run type-check && npm run test && npm run build",
    "backup:db": "node scripts/backup-database.js",
    "migrate:db": "node scripts/migrate-database.js",
    "seed:db": "node scripts/seed-database.js",
    "health-check": "curl -f http://localhost:3000/api/health || exit 1",
    "security-audit": "npm audit --audit-level moderate",
    "performance-test": "lighthouse http://localhost:3000 --output=json --output-path=./reports/lighthouse.json",
    "clean": "rm -rf .next out dist",
    "postinstall": "npm run type-check"
  },
  "dependencies": {
    "next": "14.2.5",
    "react": "^18",
    "react-dom": "^18",
    "firebase": "^10.12.2",
    "react-firebase-hooks": "^5.1.1",
    "lucide-react": "^0.400.0",
    "tailwindcss": "^3.4.1",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "web-vitals": "^3.5.0",
    "cloudinary": "^1.41.0"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "jest": "^29.7.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/jest-dom": "^6.4.6",
    "jest-environment-jsdom": "^29.7.0",
    "cross-env": "^7.0.3",
    "@next/bundle-analyzer": "^14.2.5",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "investment",
    "fixed-deposit",
    "fintech",
    "nextjs",
    "firebase",
    "typescript",
    "tailwindcss"
  ],
  "author": {
    "name": "Nitionz Pvt Ltd",
    "email": "support@nitionzpvtltd.com",
    "url": "https://nitionzpvtltd.com"
  },
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/nitionz/investment-platform.git"
  },
  "bugs": {
    "url": "https://github.com/nitionz/investment-platform/issues",
    "email": "support@nitionzpvtltd.com"
  },
  "homepage": "https://nitionzpvtltd.com",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check && npm run test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}